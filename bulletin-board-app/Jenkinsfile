pipeline {
  agent none
  stages {
    stage('Docker Build') {
      agent { label 'Jenkins' }
      steps {
        sh 'sudo docker build -t sivasankarb9/bb-app:${BUILD_NUMBER} ${WORKSPACE}/bulletin-board-app'
      }
    }
	  
    stage('Docker Push') {
      agent { label 'Jenkins' }
      steps {
        sh 'sudo docker push sivasankarb9/bb-app:${BUILD_NUMBER}'
      }
    }
   
}
	
}
